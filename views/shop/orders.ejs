<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs') %>
</head>

<body>
    <header class="main-header">
        <%- include('../includes/nav.ejs') %>
    </header>
    <main>
      <% if (orders.length <= 0) { %>
        <h1>Nothing there!</h1>
      <% } else { %>
        <ul>
          <% orders.forEach(order => { %>
            <li>
              <h1># <%= order.id %></h1>
              <ul>
                <% order.products.forEach(product => { %>
                  <li><%= product.title %> (<%= product.orderItem.quantity %>)</li>
                <% }) %>
              </ul>
            </li>
          <% }); %>
        </ul>
      <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
</body>

</html>